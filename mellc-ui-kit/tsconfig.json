{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@theme/*": ["theme/*"],
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"]
    },
    "types": ["node"],
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
